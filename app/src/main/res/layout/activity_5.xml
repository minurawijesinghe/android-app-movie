<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity5"
    android:background="@drawable/creditcard"
    >

    <TextView
        android:id="@+id/textView11"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Payment"
        android:textColor="#F7F6F6"
        android:autoSizeTextType="uniform"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:paddingLeft="10dp"

        />
    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name on the card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:textColorHint="#ffffff"
        android:ems="10"
        android:inputType="textPersonName"
        />
    <EditText
        android:id="@+id/cardNumber"
        android:layout_below="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Card Number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColorHint="#ffffff"
        android:ems="10"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/exprDate"
        android:layout_below="@+id/cardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="expiry date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColorHint="#ffffff"
        android:ems="10"
        android:inputType="date"

        />
    <EditText
        android:id="@+id/csv"
        android:layout_below="@id/exprDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="csv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColorHint="#ffffff"
        android:ems="10"
        android:inputType="date"

        />
    <EditText
        android:id="@+id/billingEmail"
        android:layout_below="@id/csv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Billing Email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColorHint="#ffffff"
        android:ems="10"
        android:inputType="date"

        />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textColor="#F5F1F1"
        />
</RelativeLayout>
