<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cinemajapan"
    android:visibility="visible"
    tools:context=".Activity3">



    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Select the date"
        android:autoSizeTextType="uniform"
        android:textColor="#FDFCFC"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:text="Continue"
        android:background="@drawable/edit_round"
        android:backgroundTint="#E91E63"
        android:autoSizeTextType="uniform"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="240dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="within 4 days from today"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="25dp"
        android:autoSizeTextType="uniform"
        android:layout_centerHorizontal="true"
        android:textColor="#DBDBDB"
        />

    <Button
        android:id="@+id/buttonChangeDate"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:autoSizeTextType="uniform"
        android:text="pick a date"
        android:background="@drawable/button_date_picking"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/buttonChangeDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#706F6F"
        android:autoSizeTextType="uniform"
        android:typeface="serif"
         />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textColor="#ffffff"
        android:textSize="35sp"
        />

    <Button
        android:id="@+id/confirm"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:autoSizeTextType="uniform"
        android:text="confirm"
        android:background="@drawable/button_date_picking"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView9"/>

</RelativeLayout>
